{
    "semi": true,
    "singleQuote": true,
    "singleAttributePerLine": false,
    "htmlWhitespaceSensitivity": "css",
    "printWidth": 150,
    "plugins": ["prettier-plugin-organize-imports", "prettier-plugin-tailwindcss"],
    "tailwindFunctions": ["clsx", "cn"],
    "tabWidth": 4,
    "overrides": [
        {
            "files": "**/*.yml",
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "**/*.blade.php",
            "options": {
                "printWidth": 120,
                "parser": "blade"
            }
        },
        {
            "files": "**/*.vue",
            "options": {
                "parser": "vue"
            }
        },
        {
            "files": "**/*.php",
            "options": {
                "parser": "php"
            }
        },
        {
            "files": "**/*.{js,jsx,ts,tsx}",
            "options": {
                "parser": "babel"
            }
        },
        {
            "files": "**/*.{css,scss,sass,less}",
            "options": {
                "parser": "css"
            }
        },
        {
            "files": "**/*.html",
            "options": {
                "parser": "html"
            }
        }
    ]   
}
